<div class="container mt-5">
	<div class="row">
		<div class="col-md-6 mx-md-auto">
			<div class="card">
				<div class="card-body">
					<h2 class="card-title text-center">Forgot your password?</h2>
					<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					<%= render "users/shared/error_messages", resource: resource %>
					<div class="ui form">
						<div class="field">
							<%= f.label :email %><br />
							<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Reset password" %>
						</div>

						<div class="actions">
							<%= f.submit "Send me reset password instructions", class: "fluid ui inverted green button" %>
						</div>
					</div>
					<% end %>
					<%= render "users/shared/links" %>
				</div>
			</div>
		</div>
		
	</div>
</div>
