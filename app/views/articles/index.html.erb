<nav class="navbar navbar-light bg-light">
	<h1 class="text-info">Article's </h1>
	<h2><%= link_to "New Article", new_article_path %></h2>
	<h2><%= link_to "Log_out", destroy_user_session_path %></h2>
</nav>

<h3 class="text-center">Our blog has <%#= Article.public_count %> articles add counting!</h3>

<div class="container">
	<div class="col-5">
		<table class="table bg-light p-2">
			<thead>
				<tr class="text-info">
					<th class="">Article</th>
				</tr>

			</thead>
			<% @articles.each do |article| %>
			<% unless article.archived? %>
			<tbody >
				<tr>
					<td >
						<%= link_to article.title, article %>
					</td>
				</tr>
			</tbody>
			<% end %>
			<% end %>
		</table>
		<%= paginate @articles %>
	</div>
</div>

 